# ========================================
# PQCTS Backend - Environment Variables
# ========================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ========================================
# Server Configuration
# ========================================
# Port for FastAPI server (Azure sets this automatically)
PORT=8000

# Port for C Quantum Service (internal)
QUANTUM_SERVICE_PORT=3001

# Quantum API URL
QUANTUM_API_URL=http://localhost:3001

# ========================================
# Security
# ========================================
# JWT Secret Key - MUST be changed in production!
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Algorithm
JWT_ALGORITHM=HS256

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ========================================
# Database Configuration
# ========================================
# For SQLite (development only)
DATABASE_URL=sqlite:///./qms_quantum.db

# For PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# For Azure PostgreSQL
# DATABASE_URL=postgresql://username@servername:password@servername.postgres.database.azure.com:5432/pqcts_db?sslmode=require

# For Azure SQL Database
# DATABASE_URL=mssql+pyodbc://username:password@servername.database.windows.net:1433/pqcts_db?driver=ODBC+Driver+18+for+SQL+Server

# ========================================
# CORS Configuration
# ========================================
# Allowed origins (comma-separated)
CORS_ORIGINS=*

# Set to specific origins in production:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=qms_platform.log

# ========================================
# Azure Configuration
# ========================================
# Azure Storage (for production file storage)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Key Vault (for secrets management)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (for monitoring)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# ========================================
# Optional: PostgreSQL (for docker-compose)
# ========================================
POSTGRES_PASSWORD=changeme
POSTGRES_USER=pqcts_user
POSTGRES_DB=pqcts_db

# ========================================
# Development Settings
# ========================================
# Set to 'development' or 'production'
ENVIRONMENT=production

# Enable debug mode (never use in production!)
DEBUG=False
